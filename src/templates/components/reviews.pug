script(type="text/x-template")#slider-container

    .slider
        .slider__header
            .slider__title.section-title
                h3 Что обо мне говорят
            .slider__buttons
                button(type="button" @click="previous()" ref="prevBtn").slider__round-btn.slider__round-btn--right
                button(type="button" @click="next()" ref="nextBtn").slider__round-btn.slider__round-btn--left
        flickity(ref="flickity" :options="flickityOptions").slider__content
            .slider__item.quote.quote(v-for="review in reviews")
                .quote__content
                    .quote__text
                        p {{review.text}}
                    .quote__user.user
                        .user-min
                            .user-min__avatar
                                .user-min__avatar-wrapper
                                    img(:src="review.photo").user__avatar-img
                            .user-min__info
                                .user-min__name {{review.name}}
                                .user-min__occ {{review.occ}}