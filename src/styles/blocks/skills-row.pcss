.skills-row__title {
  margin-bottom: 26px;
  font-size: 24px;
  font-weight: 700;
}

.skills-row__list {
  display: flex;
  flex-wrap: wrap;
  @include phones {
    justify-content: center;
  }
}

.skills-row__item {
  margin-left: 3%;
  &:first-child {
    margin-left: 0%;
  }
  @include phones {
    margin-left: 0;
  }
}