.userinfo {
  display: flex;
  align-items: flex-start;
  justify-content: center;
}

.userinfo__title {
  color: rgba($text-color, .4);
  font-weight: bold;
  text-align: right;
  font-size: 18px;
  margin-bottom: 20px;
  margin-right: 60px;
  padding-top: 10px;
}

.userinfo__name {
  font-size: 72px;
  font-weight: 800;
  line-height: 0.9;
  font-stretch: expanded;
  flex-basis: 400px
}

