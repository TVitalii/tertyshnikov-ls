.user-min {
  display: flex;
  align-items: center;
}

.user-min__avatar {
    display: flex;
    justify-content: center;
    margin-right: 1.875rem;
}
.user-min__avatar-wrapper {
    width: 75px;
    height: 75px;
    overflow: hidden;
    border-radius: 50%;
    flex-shrink: 0;
}

.user__avatar-img {
    max-height: unset;
}

.user-min__name {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 16px;
}

.user-min__occ {
  color: rgba($text-color, .3);
  font-weight: 600;
}